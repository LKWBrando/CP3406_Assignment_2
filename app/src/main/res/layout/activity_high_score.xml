<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="#262626"
    tools:context="example.assignmentone.cp3406.cp3406_assignment_2.HighScoreActivity">

    <!--Sub header for High scores-->
    <TextView
        android:id="@+id/highScoreText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_weight="4"
        android:textSize="36sp"
        android:textColor="#ba2d0b"
        android:text="High Scores"/>

    <!--Sub header for "Top Five Player"-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:textSize="26dp"
        android:textColor="#f5853f"
        android:text="Top Five Players"/>

    <!--Displays the top five players from the SQLite database-->
    <TextView
        android:id="@+id/displayHighScore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:layout_gravity="center"
        android:layout_weight="4"
        android:textColor="#f5853f"
        android:layout_marginLeft="60dp"
        android:text="Top Five"/>

    <!--Button to return to main menu-->
    <Button
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:onClick="buttonPressed"
        android:background="#931621"
        android:textColor="#eff1f3"
        android:layout_marginBottom="5dp"
        android:text="Back to Start"/>
</LinearLayout>