<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="8"
    android:padding="5dp"
    android:background="#262626"
    tools:context="example.assignmentone.cp3406.cp3406_assignment_2.InstructionsActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_weight="1"
        android:padding="15dp"
        android:textSize="30sp"
        android:textColor="#ba2d0b"
        android:text="How to play the game"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_weight="1"
        android:textColor="#f5853f"
        android:padding="15dp"
        android:text="To start, select the topic that you want to be quizzed on."/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_weight="1"
        android:textColor="#f5853f"
        android:padding="15dp"
        android:text="You will be able to choose the time given per question, as well as the number of questions in the quiz"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_weight="1"
        android:textColor="#f5853f"
        android:padding="15dp"
        android:text="For each question in the quiz, there is a time limit in which you have to pick an answer to the question."/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_weight="1"
        android:textColor="#f5853f"
        android:padding="15dp"
        android:text="Score points when you pick the correct answer! The faster you answer correctly, the more points you get!"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_weight="1"
        android:textColor="#f5853f"
        android:padding="15dp"
        android:text="Stuck? You will be able to skip a few questions (Based on number of questions.) \nSimply tilt your phone to the left or right."/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_weight="1"
        android:textColor="#f5853f"
        android:padding="15dp"
        android:text="You will be able to save your score at the end, and even post it onto Twitter to show off to your friends!"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:background="#931621"
        android:textColor="#eff1f3"
        android:onClick="buttonPressed"
        android:text="Return to Main"/>
</LinearLayout>
